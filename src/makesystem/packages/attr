#!/bin/bash

tar -xf attr-2.5.1.tar.gz
cd attr-2.5.1

./configure --prefix=/usr     \
            --bindir=/bin     \
            --disable-static  \
            --sysconfdir=/etc

make

if [ $TEST_MODE = "enable" ]; then
	make check
fi

make install

mv -v /usr/lib/libattr.so.* /lib
ln -sfv ../../lib/$(readlink /usr/lib/libattr.so) /usr/lib/libattr.so
