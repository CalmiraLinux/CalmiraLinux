#!/bin/bash

tar -xf bash-5.1.8.tar.gz
cd bash-5.1.8

sed -i  '/^bashline.o:.*shmbchar.h/a bashline.o: ${DEFDIR}/builtext.h' Makefile.in
./configure --prefix=/usr                    \
            --without-bash-malloc            \
            --with-installed-readline
            
make
make install

mv -vf /usr/bin/bash /bin