#!/bin/bash

NAME="flex"
VERSION="2.6.4"

{ time \
    {
        tar -xf $NAME-$VERSION.tar.gz &&
        cd $NAME-$VERSION &&

        ./configure --prefix=/usr        \
            --docdir=/usr/share/doc/flex \
            --disable-static &&

        make &&
        make install &&

        ln -sv flex /usr/bin/lex
    }
} 2>&1 | tee /var/log/system_building/packages/$NAME.log