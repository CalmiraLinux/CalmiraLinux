#!/bin/bash

NAME="gawk"
VERSION="5.1.0"

{ time \
    {
        tar -xf gawk-$VERSION.tar.xz &&
        cd gawk-$VERSION &&

        sed -i 's/extras//' Makefile.in &&
        ./configure --prefix=/usr &&

        make &&
        make install
    }
} 2>&1 | tee /var/log/system_building/packages/$NAME.log