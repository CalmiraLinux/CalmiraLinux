#!/bin/bash

tar -xf elfutils-0.185.tar.bz2
cd elfutils-0.185

./configure --prefix=/usr                \
	   		--libdir=/lib                \
            --disable-debuginfod         \
            --enable-libdebuginfod=dummy
            
make
make -C libelf install
install -vm644 config/libelf.pc /usr/lib/pkgconfig
rm /lib/libelf.a